@model IEnumerable<ERP.ApplicationCore.Models.SchoolListModel>

@{
    ViewData["Title"] = "GetSchoolList";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">School List</h5>
        <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="CreateSchool">Create New School</a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>University Name</th>
                    <th>School Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model) 
                {
                  <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SchoolName)
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SchoolName)
                    </td>
                    <td>
                            @if(item.Status)
                            {
                                <span class="badge bg-label-primary me-1">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-label-warning me-1">In Active</span>
                            }
                        </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                            <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="EditSchool" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="DeleteSchool" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

