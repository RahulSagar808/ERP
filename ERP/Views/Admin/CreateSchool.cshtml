@using ERP.ApplicationCore.Models
@model SchoolModel

@{
    ViewData["Title"] = "CreateSchool";
}

<div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
        <div class="card mb-6">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Create New School Form</h5> 
                <a class="float-end" asp-action="GetSchoolList">Back to List</a>
            </div>
            <div class="card-body">
                <form asp-action="CreateSchool">
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="UniversityId">University Name</label>
                        <div class="col-sm-10">
                            <select class="form-control" asp-for="UniversityId" asp-items="Model.DropdownListItems"> <option value="">-- Select University --</option> </select>
                            <span asp-validation-for="UniversityId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="SchoolName">School Name</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="SchoolName" placeholder="Enter School Name" />
                            <span asp-validation-for="SchoolName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Create School </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
