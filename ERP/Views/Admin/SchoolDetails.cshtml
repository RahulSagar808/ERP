@model ERP.ApplicationCore.Models.SchoolModel

@{
    ViewData["Title"] = "School Details";
}

<h2 class="mb-4">School Details</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">School ID :</div>
            <div class="col-md-8">@Model.Id</div>
        </div>

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">School Name :</div>
            <div class="col-md-8">@Model.SchoolName</div>
        </div>

        <div class="row mb-2">
            <div class="col-md-4 fw-bold">University ID :</div>
            <div class="col-md-8">@Model.UniversityId</div>
        </div>

        <hr />

        <div class="d-flex gap-2">
            <a asp-action="EditSchool" asp-route-id="@Model.Id" class="btn btn-primary">
                Edit
            </a>
            <a asp-action="GetSchoolList" class="btn btn-secondary">
                Back to List
            </a>
        </div>

    </div>
</div>
