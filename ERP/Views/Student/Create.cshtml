@model ERP.ApplicationCore.Models.StudentModel

@{
    ViewData["Title"] = "Create Student";
}

<div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
        <div class="card mb-6">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Create New School Form</h5>
                <a class="float-end" asp-action="GetSchoolList">Back to List</a>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="SchoolId">School Name</label>
                        <div class="col-sm-10">
                            <select class="form-control" asp-for="SchoolId" asp-items="Model.DropdownListItems"> <option value="">-- Select School --</option> </select>
                            <span asp-validation-for="SchoolId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="FirstName">First Name</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="FirstName" placeholder="Enter Your First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="LastName">Last Name</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="LastName" placeholder="Enter Your Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Email" placeholder="Enter Your Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="PhoneNumber">Phone</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="PhoneNumber" placeholder="Enter Your Phone Number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="DateOfBirth">DateOfBirth</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="DateOfBirth" placeholder="Enter Your DateOfBirth" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="Gender">Gender</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Gender" placeholder="Enter Your Gendar" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label" asp-for="Address">Address</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Address" placeholder="Enter Your Addrese" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Create </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
