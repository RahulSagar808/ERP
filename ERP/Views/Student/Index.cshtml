@model IEnumerable<ERP.ApplicationCore.Models.StudentListModel>

@{
    ViewData["Title"] = "Student List";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Student List</h5>
        <a asp-action="Create" class="btn btn-primary">
            Create New Student
        </a>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>STUDENT NAME</th>
                    <th>EMAIL</th>
                    <th>MOBILE</th>
                    <th>DOB</th>
                    <th>GENDER</th>
                    <th>SCHOOL</th>
                    <th>STATUS</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Student Name with Avatar -->
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar avatar-sm me-3">
                                    <span class="avatar-initial rounded-circle bg-label-primary">
                                        @item.FirstName.Substring(0, 1)
                                    </span>
                                </div>
                                <div>
                                    <span class="fw-medium">
                                        @item.FirstName @item.LastName
                                    </span>
                                </div>
                            </div>
                        </td>

                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>

                        <td>
                            @item.DateOfBirth.ToString("dd MMM yyyy")
                        </td>

                        <td>
                            <span class="badge bg-label-info">
                                @item.Gender
                            </span>
                        </td>

                        <td>
                            @item.SchoolName
                        </td>

                        <td>
                            <span class="badge bg-label-success">
                                Active
                            </span>
                        </td>

                        <!-- Actions (3 dots like Sneat) -->
                        <td>
                            <div class="dropdown">
                                <button type="button"
                                        class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>

                                <div class="dropdown-menu">
                                    <a class="dropdown-item"
                                       asp-action="StudentEdit"
                                       asp-route-id="@item.Id">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>

                                    <a class="dropdown-item"
                                       asp-action="StudentDetails"
                                       asp-route-id="@item.Id">
                                        <i class="bx bx-show me-1"></i> Details
                                    </a>

                                    <a class="dropdown-item text-danger"
                                       asp-action="Delete"
                                       asp-route-id="@item.Id">
                                        <i class="bx bx-trash me-1"></i> Delete
                                    </a>


                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
